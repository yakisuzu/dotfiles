[include]
	path = .gitconfig_local
[core]
	attributesfile = ~/.gitattributes
	editor = vim
	quotepath = false
	autocrlf = false
[push]
	default = simple
[diff]
	patience = true
	compactionHeuristic = true
[color]
	ui = true
[alias]
	s = status
	d = diff
	dw = diff --word-diff=plain
	dc = diff --cached
	dcw = diff --cached --word-diff=plain
	a = add
	c = commit
	cm = commit -m
	l = log
	ln = log -n 3
	logd = log --oneline --graph --decorate
	logdn = log --oneline --graph --decorate -n 10
	los = log --oneline --numstat
	w = whatchanged
	wo = whatchanged --oneline
